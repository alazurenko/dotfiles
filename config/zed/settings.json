{
  "ui_font_features": {
    "calt": 0
  },
  "show_edit_predictions": false,
  "agent": {
    "default_profile": "ask",
    "default_model": {
      "provider": "copilot_chat",
      "model": "claude-3.7-sonnet"
    }
  },
  "autosave": "on_focus_change",
  "buffer_font_family": "Fira Code",
  "project_panel": {
    "dock": "right"
  },
  "theme": "Catppuccin Macchiato",
  "telemetry": {
    "diagnostics": false,
    "metrics": false
  },
  "scrollbar": {
    "show": "never"
  },
  "tab_bar": {
    "show": false
  },
  "toolbar": {
    "breadcrumbs": true,
    "quick_actions": false
  },
  "cursor_blink": false,
  "indent_guides": {
    "enabled": false,
    "coloring": "indent_aware"
  },
  "wrap_guides": [90],
  "format_on_save": "off",
  "vim_mode": true,
  "relative_line_numbers": true,
  "ui_font_size": 18,
  "buffer_font_size": 18
}
